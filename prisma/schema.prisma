generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                String @id @default(cuid())

  name              String
  email             String @unique
  password          String
  role              Int // 100 = adm // 200 = supervisor // 300 teammate
  
  poolUsers         PoolUsers[] @relation("Users")
  
  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt

  @@map("users")
}

model PoolUsers {
  id                Int @id @default(autoincrement())

  user              Users @relation("Users", fields: [userId], references: [id], onDelete: Cascade)
  userId            String

  connection        Pools @relation("Pools", fields: [connectionId], references: [id], onDelete: Cascade)
  connectionId      String

  rule              String

  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt

  @@map("poolUsers")
}

model Pools {
  id                String @id @default(cuid())

  name              String @unique

  token             String

  users             PoolUsers[] @relation("Pools")

  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt

  @@map("Pools")
}